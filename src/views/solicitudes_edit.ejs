<%- include("partials/_header") %>

<div class="mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/solicitudes/update/<%=solicitud.id%>" method="POST">
          <label for="nombre">Nombre del Receptor</label>
            <input
            type="text"
            name="nombre"
            placeholder="nombre"
            class="form-control mb-2"
            autofocus
            value="<%=solicitud.nombre%>"
          />
          <label for="Motivo">Motivo de la Donaci√≥n</label>
          <input
            type="text"
            name="motivo"
            placeholder="motivo"
            class="form-control mb-2"
            value="<%=solicitud.motivo%>"
          />
          <label for="correo">Grupo Sanguineo</label>
          <input
            type="text"
            name="grupo"
            placeholder="grupo"
            class="form-control mb-2"
            value='<%=solicitud.grupo%>'
          />
          <label for="correo">RH</label>
          <input
            type="text"
            name="RH"
            placeholder="GrupoSanguineo"
            class="form-control mb-2"
            value='<%=solicitud.RH%>'
          />
          <label for="correo">Cantidad(Litros)</label>
          <input
            type="number"
            name="cantidad"
            placeholder="cantidad"
            class="form-control mb-2"
            value='<%=solicitud.cantidad%>'
          />
          
          <button type="submit" class="btn btn-info">Editar Solicitud</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
