<%- include("partials/_header") %>

<div class="mt-5">
  <div class="row">
    <div class="col-md-5 offset-md-3 card bg-dark">
      <div class="card-body">
        <form action="/extracciones/update/<%=extraccion.id%>" method="POST">
          <label for="fechaNacimiento">Fecha de Extracción</label>
            <input
            type="date"
            name="fecha"
            placeholder="Fecha"
            class="form-control mb-2"
            value="<%=extraccion.fecha%>"
          />
          <label for="nombre">Nombre del Donador</label>
          <input
            type="text"
            name="Donante"
            placeholder="Donante"
            class="form-control mb-2"
            autofocus
            value="<%=extraccion.Donante%>"
          />
          <label for="volumen">Cantidad de Sangre Extraida</label>
          <input
            type="number"
            name="Volumen"
            placeholder="Volumen"
            class="form-control mb-2"
            value="<%=extraccion.volumen%>"
          />
          <label for="grupo">Grupo Sanguineo</label>
          <input
            type="text"
            name="Grupo"
            placeholder="GrupoSanguineo"
            class="form-control mb-2"
            value="<%=extraccion.grupo%>"
          />
          <label for="RH">RH</label>
          <input
            type="text"
            name="RH"
            placeholder="RH"
            class="form-control mb-2"
            value="<%=extraccion.RH%>"
          />
          
          <button type="submit" class="btn btn-info">Editar Datos de la extracción</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
