<%- include("partials/_header") %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-7">
      <table class="table table-dark table-bordered table-hover">
        <thead>
          <tr>
            <td>nÂ°</td>
            <td>Fecha</td>
            <td>Donante</td>
            <td>Volumen</td>
            <td>Grupo Sanguineo</td>
            <td>RH</td>
          </tr>
        </thead>
        <tbody>
          <% if (extraccion) { %> <% for(var i = 0; i < extraccion.length; i++) {
          %>
          <tr>
            <td><%= (i + 1) %></td>
            <td><%= extraccion[i].fecha %></td>
            <td><%= extraccion[i].Donante %></td>
            <td><%= extraccion[i].Volumen %></td>
            <td><%= extraccion[i].Grupo %></td>
            <td><%= extraccion[i].RH %></td>
            <td class="d-flex gap-2">
              <a href="/extracciones/update/<%= extraccion[i].id %>" class="btn btn-info">
                Edit
              </a>
              <a href="/extracciones/delete/<%= extraccion[i].id %>" class="btn btn-danger">
                Delete
              </a>
            </td>
          </tr>
          <% } %> <% } %>
        </tbody>
      </table>
    </div>
    <div class="col-md-5">
      <div class="card-body">
        <form action="/extracciones/add" method="POST">
            <input
            type="date"
            name="fecha"
            placeholder="Fecha"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="Donante"
            placeholder="Donante"
            class="form-control mb-2"
            autofocus
          />
          <input
            type="number"
            name="Volumen"
            placeholder="Volumen"
            class="form-control mb-2"
          />
          <input
            type="number"
            name="Grupo"
            placeholder="GrupoSanguineo"
            class="form-control mb-2"
          />
          <input
            type="text"
            name="RH"
            placeholder="RH"
            class="form-control mb-2"
          />

          <button type="submit" class="btn btn-info">Grabar Donante</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
